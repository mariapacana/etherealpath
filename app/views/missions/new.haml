%h2 Create a New Mission

= form_for @mission do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title, :size => 51
  .field
    = f.label(:start_time, 'Start Time')
    %br
    = f.datetime_select(:start_time, :start_year => 2015, :minute_step => 15)
  .field
    = f.label :description
    %br
    = f.text_area :description, :rows => 2, :cols => 50
  %h3 Challenges
  #challenges
    = f.fields_for :challenges do |challenge|
      = render 'challenge_fields', :f => challenge
    .links
      = link_to_add_association 'add challenge', f, :challenges
  = f.submit

